<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Insert dragged node upper current node -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_tree_node_drop_location_indicator" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Bottom Shadow -->
    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_tree_node_shadow" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Top Background -->
    <item
        android:bottom="1dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_tree_node_background" />
            <corners android:radius="2dp" />
        </shape>
    </item>

</layer-list>