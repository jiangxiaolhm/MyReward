<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Insert dragged node into current node's subtree -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_tree_node_drop_location_indicator" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Top Background -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_tree_node_background" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>